<Window x:Class="Chatprogramm_github.UnknownUserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chatprogramm_github"
        mc:Ignorable="d"
        Title="Fremder Benutzer" Height="176" Width="400" Icon="favicon.ico">

    <StackPanel>
        <TextBlock x:Name="Tb_display" Text="Sie haben eine Nachricht von einem fremden Benutzer erhalten. Wollen Sie diesen speichern oder ignorieren?" HorizontalAlignment="Left" Height="45" VerticalAlignment="Top" TextWrapping="Wrap" Width="347" Margin="15"/>
        <WrapPanel>
            <Button x:Name="btn_Save" Content="Speichern" Height="25" VerticalAlignment="Top" Margin="90, 15, 10, 10" Width="95" Click="btn_Save_Click"/>
            <Button x:Name="btn_Ignore" Content="Ignorieren" Height="25" VerticalAlignment="Top" Margin="15" Width="95" Click="btn_Ignore_Click"/>
        </WrapPanel>
    </StackPanel>    
</Window>